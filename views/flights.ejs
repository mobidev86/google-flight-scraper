<% if (show_modal) { %>
    <div class="modal" style="display: block" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Price Graph</h4>
                </div>
                <div class="modal-body">
                    <% if (chartData && chartData.length> 0) { %>
                        <canvas id="myChart"></canvas>
                        <%} else { %>
                            <p class="text-center" style="padding: 30px 0px;"> Not data available for route!! </p>
                            <% } %>

                </div>
            </div>
        </div>
        <script>
            let chartData = '<%- JSON.stringify(chartData) %>';
            let labels = [], data = []
            chartData = chartData && JSON.parse(chartData) || [];
            if (chartData.length) {
                for (let index = 0; index < chartData.length; index++) {
                    const item = chartData[index];
                    labels.push(moment(item.flightDate).format("MMM Do YYYY"));
                    data.push(item.price_average)
                }

                var myChart = new Chart(
                    document.getElementById('myChart'),
                    {
                        type: 'bar',
                        data: {
                            labels,
                            datasets: [{
                                label: 'Price Graph',
                                data,
                                backgroundColor: "rgb(102, 157, 246)",
                                borderColor: "rgb(102, 157, 246)",
                                hoverBackgroundColor: "rgb(24, 90, 188)",
                                borderWidth: 1,
                                borderRadius: 5,
                                hoverRadius: 4
                            }]
                        },
                        options: {

                            scales: {
                                y: {
                                    beginAtZero: true,
                                },
                            }
                        },
                    }
                );
            }

            function formatPrice(price) {
                var x = price;
                x = x.toString();
                var lastThree = x.substring(x.length - 3);
                var otherNumbers = x.substring(0, x.length - 3);
                if (otherNumbers != '')
                    lastThree = ',' + lastThree;
                var res = otherNumbers.replace(/\B(?=(\d{2})+(?!\d))/g, ",") + lastThree;
                return res;
            }

        </script>
    </div>
    <% } %>
