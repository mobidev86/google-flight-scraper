            let query = '<%- JSON.stringify(query)%>';
            query = query && JSON.parse(query) || {};

            if (query && Object.keys(query).length) {
                let queryOrigin = query.origin || query.inputOrigin;
                document.querySelector("[name='origin']").value = queryOrigin;

